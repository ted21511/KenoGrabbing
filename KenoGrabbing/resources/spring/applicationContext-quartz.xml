<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
	default-autowire="no" default-lazy-init="false">

	<bean id="runLottoGrabbingWCA"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="LottoGrabbingWCA" />
		<property name="targetMethod" value="startGrabbing" />
		<property name="concurrent" value="false" />
	</bean>
	
	<bean id="cronTriggerWCA" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="runLottoGrabbingWCA" />
		<property name="cronExpression" value="0 0/1 * * * ?" />

	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		depends-on="sysParamManager">
		<property name="triggers">
			<list>				
				<ref bean="cronTriggerWCA" />
			</list>
		</property>
		<property name="quartzProperties">
			<bean
				class="org.springframework.beans.factory.config.PropertiesFactoryBean">
				<property name="location" value="classpath:quartz.properties" />
			</bean>
		</property>
		<property name="waitForJobsToCompleteOnShutdown" value="false" />

	</bean>

</beans>
